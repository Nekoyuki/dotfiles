export EDITOR=vim

case ${OSTYPE} in
    linux*)
        export SHELL=${HOME}/local/bin/zsh

        export LANG="ja_JP.UTF-8"
        export LC_CTYPE="ja_JP.UTF-8"
        export LC_NUMERIC="ja_JP.UTF-8"
        export LC_TIME="ja_JP.UTF-8"
        export LC_COLLATE="ja_JP.UTF-8"
        export LC_MONETARY="ja_JP.UTF-8"
        export LC_MESSAGES="ja_JP.UTF-8"
        export LC_PAPER="ja_JP.UTF-8"
        export LC_NAME="ja_JP.UTF-8"
        export LC_ADDRESS="ja_JP.UTF-8"
        export LC_TELEPHONE="ja_JP.UTF-8"
        export LC_MEASUREMENT="ja_JP.UTF-8"
        export LC_IDENTIFICATION="ja_JP.UTF-8"
        ;;
    msys*)
        export SHELL=/usr/bin/zsh

        case ${CONTITLE} in
            MSys2_UTF-8)
                export LANG="ja_JP.UTF-8"
                export OUTPUT_CHARSET=utf8
                ;;
            MSys2_SJIS)
                export LANG="ja_JP.SJIS"
                export OUTPUT_CHARSET=sjis
                ;;
        esac

        # export LANG="ja_JP.UTF-8"
        # export LANG="ja_jp.SJIS"
        # export LC_CTYPE="ja_jp.SJIS"
        # export LC_NUMERIC="ja_jp.SJIS"
        # export LC_TIME="ja_jp.SJIS"
        # export LC_COLLATE="ja_jp.SJIS"
        # export LC_MONETARY="ja_jp.SJIS"
        # export LC_MESSAGES="ja_jp.SJIS"
        # export LC_PAPER="ja_jp.SJIS"
        # export LC_NAME="ja_jp.SJIS"
        # export LC_ADDRESS="ja_jp.SJIS"
        # export LC_TELEPHONE="ja_jp.SJIS"
        # export LC_MEASUREMENT="ja_jp.SJIS"
        # export LC_IDENTIFICATION="ja_jp.SJIS"

        export BROWSER="C:\Program Files (x86)\Google\Chrome\Application\chrome.exe"
        ;;
esac

