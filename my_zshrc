# prompt
#**************************************
local COLOR_FG=$'\e[38;5;034m'
local COLOR_BG=$'\e[30;48;5;082m'
local COLOR_RESET=$'\e[0m'

case ${HOSTNAME} in 
    r*)
        local HOSTCOLOR=$'\e[30;48;5;132m'
        ;;
    N*)
        local HOSTCOLOR=$'\e[30;48;5;030m'
        ;;
    h*)
        local HOSTCOLOR=$'\e[30;48;5;030m'
        ;;
esac

local LANG_WORD=`echo ${LANG} | cut -c 7-`
case ${LANG_WORD} in 
    UTF-8)
        local LANG_COLOR=$'\e[30;48;5;030m'
        ;;
    SJIS)
        local LANG_COLOR=$'\e[30;48;5;132m'
        ;;
esac
local PROMPT_LANG=${LANG_COLOR}${LANG_WORD}${COLOR_RESET}

local MY_PROMPT="%{${COLOR_FG}%}[%h:%n@%{${COLOR_RESET}%}%{${HOSTCOLOR}%}%m%{${COLOR_RESET}%}%{${COLOR_FG}%}:%{${PROMPT_LANG}%}:%{${COLOR_FG}%}%c]>%{${COLOR_RESET}%}"
# PROMPT="%{${COLOR_FG}%}[%h:%n@%{${COLOR_RESET}%}%{${HOSTCOLOR}%}%m%{${COLOR_RESET}%}%{${COLOR_FG}%}:%{${PROMPT_LANG}%}:%{${COLOR_FG}%}%c]>%{${COLOR_RESET}%}"
# PROMPT="%{${fg[blue]}%}[%h:%n@%m:%c]>%{${reset_color}%}"

PROMPT2="%_%%"
SPROMT="${fg[red]}>>${reset_color}"

# from b4b4r07
autoload -Uz colors; colors
autoload -Uz add-zsh-hook
autoload -Uz terminfo

terminfo_down_sc=$terminfo[cud1]$terminfo[cuu1]$terminfo[sc]$terminfo[cud1]
left_down_prompt_preexec() {
    print -rn -- $terminfo[el]
}
add-zsh-hook preexec left_down_prompt_preexec

function zle-keymap-select zle-line-init zle-line-finish
{
    case $KEYMAP in
        main|viins)
            PROMPT_2="$fg[cyan]-- INSERT --$reset_color"
            ;;
        vicmd)
            PROMPT_2="$fg[white]-- NORMAL --$reset_color"
            ;;
        vivis|vivli)
            PROMPT_2="$fg[yellow]-- VISUAL --$reset_color"
            ;;
    esac

    PROMPT="%{$terminfo_down_sc$PROMPT_2$terminfo[rc]%}%{$MY_PROMPT%} "
    # PROMPT="%{$terminfo_down_sc$PROMPT_2$terminfo[rc]%}[%(?.%{${fg[green]}%}.%{${fg[red]}%})%n%{${reset_color}%}]%# "
    zle reset-prompt
}

zle -N zle-line-init
zle -N zle-line-finish
zle -N zle-keymap-select
zle -N edit-command-line

